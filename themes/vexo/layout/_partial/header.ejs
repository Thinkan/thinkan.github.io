<header class="header fixed-header">
  <div class="header-container">
    <a class="home-link" href="<%- url_for() %>">
      <div class="logo"></div>
      <span><%- config.title %></span>
    </a>
	
	<div class="weather-parent">
		<div id="tp-weather-widget"></div>
	</div>
	
    <ul class="right-list">
		<li class="list-item">
			<div id="site_search">
			   <div class="form-group">
				<input type="text" id="local-search-input" name="q" results="0" placeholder="<%= __('search') %>" class="st-search-input st-default-search-input form-control"/>
			   </div>  
			  <div id="local-search-result" class="st-search-input st-default-search-input form-control"></div>
		  </div>
	   </li>
      <% for(name in theme.menu) { %>
        <li class="list-item">
          <% if (url_for(theme.menu[name]) == '/' + path.replace('/index.html', '') || (url_for(theme.menu[name]) == '/' && is_home())) { %>
            <a href="<%- url_for(theme.menu[name]) %>" class="item-link active"><%- name %></a>
          <% } else { %>
            <a href="<%- url_for(theme.menu[name]) %>" class="item-link"><%- name %></a>
          <% } %>
        </li>
      <% } %>
    </ul>
	
    <div class="menu">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </div>
	
    <div class="menu-mask">
      <ul class="menu-list">
        <% for(name in theme.menu) { %>
          <li class="menu-item">
            <% if (url_for(theme.menu[name]) == '/' + path.replace('/index.html', '') || (url_for(theme.menu[name]) == '/' && is_home())) { %>
              <a href="<%- url_for(theme.menu[name]) %>" class="menu-link mobile-active"><%- name %></a>
            <% } else { %>
              <a href="<%- url_for(theme.menu[name]) %>" class="menu-link"><%- name %></a>
            <% } %>
          </li>
        <% } %>
      </ul>
    </div>
	
  </div>
</header>
